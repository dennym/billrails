<%= simple_form_for(@client) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :customer_number %>
    <%= f.input :company_name %>
    <%= f.input :salutation %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :adress_line_one %>
    <%= f.input :adress_line_two %>
    <%= f.input :zipcode %>
    <%= f.input :city %>
    <%= f.input :country %>
    <%= f.input :delivery_adress %>
    <%= f.input :phone_number %>
    <%= f.input :fax_number %>
    <%= f.input :email %>
    <%= f.input :currency %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
